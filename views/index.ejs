<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
    <div class ="main text-white w-full min-h-screen bg-zinc-900">
        <div class="form p-10">
            <form action="/create" method="post">
                <input class="block w-full rounded-lg px-5 py-2 bg-zinc-500" type="text" placeholder="Text Goes Here" name="title">
                <textarea class="block w-full rounded-lg mt-2 px-5 py-2 resize-none bg-zinc-500" placeholder="Task Goes Here" name="description"></textarea>
                <input type="submit" value="Submit" class="mt-2 px-5 py-2 rounded-lg bg-blue-500">
            </form>
        </div>
        
        <% if(files && files.length > 0){ %>
            <% files.forEach(function(file){ %>
                <div class="task w-72 m-2 px-3 py-4 rounded-md bg-zinc-800">
                    <h1 class="text-lg font-semibold text-white">
                        <%= file %>
                    </h1>
                    
                    <a class="text-blue-500" href="/files/<% file %>">Read More</a>
                </div>
            <% }) %> 
        <% } else { %>
            <h1 class="text-center text-2xl font-semibold text-white">NO FILES YET</h1>
        <% } %>
            
       

  
    </div>
      
    
</body>
</html>